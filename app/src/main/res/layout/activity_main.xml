<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.machinegun.vaio.kalkuladora.MainActivity">

    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/num0" />

    <Button
        android:text="."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/num0"
        android:id="@+id/punto" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/punto"
        android:layout_toEndOf="@+id/punto"
        android:id="@+id/pi"
        android:text="π" />

    <Button
        android:text="="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/pi"
        android:id="@+id/igual" />

    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/num0"
        android:layout_alignParentStart="true"
        android:id="@+id/num1" />

    <Button
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/num0"
        android:layout_toEndOf="@+id/num0"
        android:id="@+id/num2" />

    <Button
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/punto"
        android:layout_toStartOf="@+id/igual"
        android:id="@+id/num3" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/num3"
        android:layout_toEndOf="@+id/pi"
        android:id="@+id/menos" />

    <Button
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/num1"
        android:layout_alignParentStart="true"
        android:id="@+id/num4" />

    <Button
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/num4"
        android:layout_toStartOf="@+id/num3"
        android:id="@+id/num5" />

    <Button
        android:text="6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/num5"
        android:layout_toEndOf="@+id/num2"
        android:id="@+id/num6" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/num3"
        android:layout_alignParentEnd="true"
        android:id="@+id/mas" />

    <Button
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/num4"
        android:layout_alignParentStart="true"
        android:id="@+id/num7" />

    <Button
        android:text="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/num5"
        android:layout_toEndOf="@+id/num7"
        android:id="@+id/num8" />

    <Button
        android:text="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/num8"
        android:layout_toEndOf="@+id/num5"
        android:id="@+id/num9" />

    <Button
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mas"
        android:layout_toEndOf="@+id/num9"
        android:id="@+id/division" />

    <Button
        android:text="√"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/num7"
        android:layout_alignParentStart="true"
        android:id="@+id/raiz" />

    <Button
        android:text="("
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/num8"
        android:layout_toEndOf="@+id/num7"
        android:id="@+id/pareniz" />

    <Button
        android:text=")"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/num8"
        android:layout_toStartOf="@+id/division"
        android:id="@+id/parender" />

    <Button
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/parender"
        android:layout_toEndOf="@+id/num9"
        android:id="@+id/multiplicacion" />

    <Button
        android:text="log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/raiz"
        android:layout_alignParentStart="true"
        android:id="@+id/logaritmo" />

    <Button
        android:text="sin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pareniz"
        android:layout_toEndOf="@+id/logaritmo"
        android:id="@+id/seno" />

    <Button
        android:text="cos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pareniz"
        android:layout_toStartOf="@+id/multiplicacion"
        android:id="@+id/coseno" />

    <Button
        android:text="tan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/coseno"
        android:layout_alignParentEnd="true"
        android:id="@+id/tangente" />

    <Button
        android:text="%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/logaritmo"
        android:layout_alignParentStart="true"
        android:id="@+id/porcentaje" />

    <Button
        android:text="x²"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/logaritmo"
        android:layout_toEndOf="@+id/porcentaje"
        android:id="@+id/exponente" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFF99"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:id="@+id/resultado" />

    <Button
        android:text="DELETE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/coseno"
        android:layout_alignParentEnd="true"
        android:id="@+id/delete"
        android:layout_toEndOf="@+id/seno" />

</RelativeLayout>
